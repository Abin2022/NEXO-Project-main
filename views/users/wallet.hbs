 <div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card wallet-card">
        <div class="card-header wallet-header">
          {{!-- <h1 class="display-4 mb-0">My Wallet:   ₹{{walletDetails.walletAmount}}</h1> --}}
            <h1 class="display-4 mb-0">
        <span class="wallet-header">My Wallet:</span>
        {{#if walletDetails }}
        ₹<span class="wallet-amount">{{walletDetails.walletAmount}}</span>
        {{else }}
                ₹<span class="wallet-amount">0</span>
                {{/if}}


    </h1>
     {{#if walletDetails }}
          <img src="/img/core-img/giphy (1).gif" alt="Wallet" style="width:150px " class="wallet-gif">
           {{else }}
           <img src="/img/core-img/poor-empty-wallet.gif" alt="Wallet" style=" position: absolute;
    top: -2px;
    right: 26px;
    width: 97px;
    height: 109px; " class="wallet-gif1">
          {{/if}}
        </div>
        <div class="card-body wallet-body">
          <div class="balance">
            {{!-- {{#if walletDetails}}
              <h2 class="display-2">₹{{walletDetails.walletAmount}}</h2>
            {{/if}} --}}
          </div>
          <ul class="list-unstyled transaction-list">
            {{#each orderDetails}}
              <li class="d-flex justify-content-between align-items-center">
                {{#if (or (eq this.orderStatus "Product") (eq this.orderStatus "Placed") (eq this.orderStatus "Delivered"))}}
                  <span class="font-weight-bold">Debit Transaction on {{this.date}}</span>
                  <span class="text-danger">-₹{{this.orderValue}}</span>
                {{else if (eq this.orderStatus "cancelled")}}
                  <span class="font-weight-bold">Credit Transaction on {{this.date}}</span>
                  <span class="text-success">₹{{this.orderValue}}</span>
                {{/if}}
              </li>
            {{/each}}
          </ul>
          {{#if showPagination}}
            <nav aria-label="Transaction Pagination">
              <ul class="pagination justify-content-center">
                {{#if hasPrev}}
                  <li class="page-item">
                    <a class="page-link black-page-link" href="?page={{prevPage}}" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                    </a>
                  </li>
                {{/if}}
                {{#each pages}}
                  <li class="page-item{{#if current}} active{{/if}}">
                    <a class="page-link black-page-link{{#if current}} current-page{{/if}}" href="?page={{number}}">{{number}}</a>
                  </li>
                {{/each}}
                {{#if hasNext}}
                  <li class="page-item">
                    <a class="page-link black-page-link" href="?page={{nextPage}}" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
                {{/if}}
              </ul>
            </nav>
               {{!-- <h2 class="display-2">₹{{walletDetails.walletAmount}}</h2> --}}

          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>




